{
    "openapi": "3.0.0",
    "paths": {
        "/calculate-price": {
            "post": {
                "summary": "Calculate total price for a product",
                "operationId": "8fb39c6be00ef4b98fb4df9f67f377d1",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CalculatePriceRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns calculated price",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "price": {
                                            "description": "Total price",
                                            "type": "number",
                                            "format": "float"
                                        },
                                        "currency": {
                                            "description": "Currency code",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation or calculation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/purchase": {
            "post": {
                "summary": "Make a purchase for a product",
                "operationId": "d8c20e08189a089c3cceb3e61fe809ad",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PurchaseRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns the created order",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "orderId": {
                                            "description": "Unique order ID",
                                            "type": "string"
                                        },
                                        "total": {
                                            "description": "Total price",
                                            "type": "number",
                                            "format": "float"
                                        },
                                        "currency": {
                                            "description": "Currency code",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation or purchase error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CalculatePriceRequest": {
                "description": "DTO for calculating product price",
                "properties": {
                    "product": {
                        "description": "Product ID",
                        "type": "integer"
                    },
                    "taxNumber": {
                        "description": "Tax number for calculation",
                        "type": "string"
                    },
                    "couponCode": {
                        "description": "Optional coupon code",
                        "type": "string",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "PurchaseRequest": {
                "description": "DTO for making a purchase",
                "properties": {
                    "product": {
                        "description": "Product ID to purchase",
                        "type": "integer",
                        "example": 1
                    },
                    "taxNumber": {
                        "description": "Tax number for calculation",
                        "type": "string",
                        "example": "DE123456789"
                    },
                    "couponCode": {
                        "description": "Optional coupon code",
                        "type": "string",
                        "example": "COUPON10",
                        "nullable": true
                    },
                    "paymentProcessor": {
                        "description": "Payment processor (e.g., paypal, stripe)",
                        "type": "string",
                        "example": "paypal"
                    }
                },
                "type": "object"
            }
        }
    }
}